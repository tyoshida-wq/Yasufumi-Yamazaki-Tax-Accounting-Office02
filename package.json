{
  "name": "webapp",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev src/index.tsx",
    "build": "vite build",
    "preview": "wrangler dev dist/_worker.js",
    "deploy": "npm run build && wrangler deploy",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:migrate:local": "wrangler d1 migrations apply yasufumi-yamazaki-tax-office-db --local",
    "db:migrate:prod": "wrangler d1 migrations apply yasufumi-yamazaki-tax-office-db",
    "db:console:local": "wrangler d1 execute yasufumi-yamazaki-tax-office-db --local",
    "db:console:prod": "wrangler d1 execute yasufumi-yamazaki-tax-office-db"
  },
  "dependencies": {
    "hono": "^4.11.7"
  },
  "devDependencies": {
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  }
}